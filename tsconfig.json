{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "importHelpers": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "alwaysStrict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
  }
}
